<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="fab_squared">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>

    <style name="card_stroke">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/strokeColor</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="customChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="checkedIconTint">@color/chip_text</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor">@color/colorSecondaryDark</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>