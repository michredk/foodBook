<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/recipesFragment">

    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.example.spoonacularapp.ui.activities.main.fragments.recipes.RecipesFragment"
        android:label="@string/recipes_fragment_title"
        tools:layout="@layout/fragment_recipes" >
        <action
            android:id="@+id/action_recipesFragment_to_recipesBottomSheet"
            app:destination="@id/recipesBottomSheet" />
        <argument
            android:name="backFromBottomSheet"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
    <fragment
        android:id="@+id/favouriteRecipesFragment"
        android:name="com.example.spoonacularapp.ui.activities.main.fragments.favorites.FavouriteRecipes"
        android:label="@string/favorite_recipes_fragment_title"
        tools:layout="@layout/fragment_favourite_recipes" />
    <fragment
        android:id="@+id/browsingHistoryFragment"
        android:name="com.example.spoonacularapp.ui.activities.main.fragments.history.BrowsingHistory"
        android:label="@string/browsing_history_fragment_title"
        tools:layout="@layout/fragment_browsing_history" />
    <dialog
        android:id="@+id/recipesBottomSheet"
        android:name="com.example.spoonacularapp.ui.activities.main.fragments.recipes.bottomsheet.RecipesBottomSheet"
        android:label="recipes_bottom_sheet"
        tools:layout="@layout/recipes_bottom_sheet" >
        <action
            android:id="@+id/action_recipesBottomSheet_to_recipesFragment"
            app:destination="@id/recipesFragment"
            app:popUpTo="@id/recipesFragment"
            app:popUpToInclusive="true" />
    </dialog>
</navigation>